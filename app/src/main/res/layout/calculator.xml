<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/calculator"
    android:orientation="vertical"
    android:layout_below="@+id/inputCash"
    android:layout_marginTop="20sp"
    android:layout_marginBottom="20sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:orientation="horizontal"
        android:id="@+id/num_row1" >

        <Button
            android:id="@+id/btn_7"
            android:text="7"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_8"
            android:text="8"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_9"
            android:text="9"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_plus"
            android:text="+"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="20sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:orientation="horizontal"
        android:id="@+id/num_row2"
        android:layout_below="@+id/num_row1">

        <Button
            android:id="@+id/btn_4"
            android:text="4"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_5"
            android:text="5"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_6"
            android:text="6"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_minus"
            android:text="-"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="20sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:orientation="horizontal"
        android:id="@+id/num_row3"
        android:layout_below="@+id/num_row2">

        <Button
            android:id="@+id/btn_1"
            android:text="1"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_2"
            android:text="2"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_3"
            android:text="3"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_multi"
            android:text="*"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="20sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:orientation="horizontal"
        android:id="@+id/num_row4"
        android:layout_below="@+id/num_row3">

        <Button
            android:id="@+id/btn_back"
            android:textSize="20sp"
            android:text="â¬…"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_0"
            android:text="0"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_equal"
            android:text="="
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_div"
            android:text="/"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="20sp"
            android:background="@drawable/button_background"
            app:backgroundTint="@null" />

    </LinearLayout>
</RelativeLayout>